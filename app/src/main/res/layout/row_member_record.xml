<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/interact_corner_view"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/d_7"
                android:layout_marginRight="@dimen/d_7"
                android:layout_marginBottom="@dimen/d_7"
                android:padding="@dimen/d_15"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="@dimen/d_0"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/voucher_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/d_0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d_21"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ishan"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/s_16"/>

                        <TextView
                            android:id="@+id/sub_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A-86 "
                            android:maxLines="2"
                            android:maxLength="60"
                            android:textSize="@dimen/s_14" />
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="02-05-2020"
                            android:onClick="@{(view) -> handlers.onClick(view, obj,0)}" />
                        <TextView
                            android:id="@+id/per_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="status"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
